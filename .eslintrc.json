{
    "extends": ["next/core-web-vitals", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "prettier/prettier": "error",
        "no-console": "warn"
    }
}
